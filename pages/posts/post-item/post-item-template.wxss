.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top:1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 10rpx;
}

.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
    display: flex;/*弹性盒子设置垂直居中*/
    flex-direction: row;
    align-items: center;
 }
 .post-author{
    height: 60rpx;
    width: 60rpx;
    /* vertical-align: middle; */
 }
 .post-date{
    margin-left: 20rpx;
    /* vertical-align: middle; */
    font-size: 26rpx;
 }
 .post-title{
     font-size: 34rpx;
     font-weight: 600;
     margin-bottom: 20rpx;
     margin-left: 20rpx;
     color: #333;
 }
 .post-image{
 width: 100%;
 height: 340rpx;
 margin-bottom: 15px;
 }
 .post-content{
   font-size: 28rpx;
   color:#666;
   letter-spacing: 2rpx;
   margin-left: 20rpx;
   margin-bottom: 20rpx;
 }
 .post-like{
     font-size: 26rpx;
     margin-left: 20rpx;
     /* 弹性盒子实现水平居中 */
     display: flex;
     flex-direction: row;
     align-items: center;
 }
 /* 行内元素 块状元素 */
 .post-like-image{
     height: 32rpx;
     width: 32rpx;
     margin-right: 16rpx;
 }
 .post-like-font{
     margin-right: 40rpx;
 }