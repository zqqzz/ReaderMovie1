.container{
   display: flex;
   flex-direction: column;
}
.head-image{
    width: 100%;
    height:460rpx;
}
.audio{
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    /* 垂直水平居中 */
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: 0.6;
}
.author-date{
    display: flex;
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.avatar{
    height: 64rpx;
    width: 64rpx;
    vertical-align: middle;
}
.author{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color:#666;
}
.const-text{
    font-size: 24rpx;
    color:#999;
    margin-left: 20rpx;
    margin-top: 5rpx;
}
.date{
    font-size: 24rpx;
    margin-left: 30rpx;
    vertical-align: middle;
    color: #999;
    margin-top: 5rpx;
}
.title{
    margin-left: 48rpx;
    font-size: 36rpx;
    font-weight: 700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color: #4b556c;
}

.tool{
    margin-top: 20rpx;
}
       
.circle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.circle-img image{
    width: 90rpx;
    height: 90rpx;
}
.share-img{
    margin-left: 30rpx;
}
.horizon{/*设置一条水平线*/
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: -44rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    color: #666;
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    font-size: 24rpx;
}